<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Resume_parsing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Resume_parsing.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        /* Custom dark blue for the navbar background */
        .bg-dark-blue {
            background-color: #2b6cb0 !important;
        }

        /* Custom styling for the navbar links on hover/focus */
        .nav-link-custom:hover,
        .nav-link-custom:focus {
            color: #ffffff !important;
            text-decoration: underline;
            text-decoration-color: #f7fafc;
            text-underline-offset: 4px;
            transition: all 0.2s ease-in-out;
        }

        /* Adjust the brand link spacing */
        .navbar-brand {
            padding-left: 0.5rem;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark-blue border-bottom-0 box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand text-white fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-file-alt me-2"></i>
                    Resume Parser
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white nav-link-custom" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white nav-link-custom" asp-area="" asp-controller="Parsing" asp-action="Index">Bulk Resume Upload</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-white nav-link-custom" asp-area="" asp-controller="Candidate" asp-action="JobProgressHistory">Job Parsing History</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white nav-link-custom" asp-area="" asp-controller="Candidate" asp-action="Index">Search Candidates</a>
                        </li>
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Resume_parsing - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>